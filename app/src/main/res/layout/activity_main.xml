<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:textAlignment="gravity"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRI'vial"
        android:textAlignment="center"
        android:textColor="#E5EFE5"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="M'enfin ! C'est trivial de trier vos dÃ©chets, avec TRI'VIAL !"
        android:textAlignment="viewStart"
        android:textSize="21sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/accueil_schema" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic_baseline_qr_code_scanner_24"
        android:text="Scanner un produit"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonRecherche"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FAF5F5"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawableTint="#100F0F"
        android:text="Rechercher un produit"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonAjouter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/ic_baseline_add_24"
        android:shadowColor="#C84C4C"
        android:text="Ajouter un produit"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        app:strokeColor="#2196F3" />

</LinearLayout>