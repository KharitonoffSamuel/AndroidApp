<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="103dp"
        app:srcCompat="@drawable/code_barre_icone"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="269dp" />

    <Button
        android:id="@+id/button_search_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSearchButtonClic"
        android:text="Je recherche mon produit"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="551dp" />

    <Button
        android:id="@+id/button_scan_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onScanButtonClic"
        android:text="Je scanne mon produit"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="372dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="106dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/recherche_icone"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="456dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#4CAF50"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="sans"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/symbole_recyclage"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="90dp" />

</androidx.constraintlayout.widget.ConstraintLayout>